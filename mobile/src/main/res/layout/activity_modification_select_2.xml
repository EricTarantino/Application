<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eric.application.modification_select_2"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_kondition_2"
        android:id="@+id/text_Kondition_2"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/button_monitor_2"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_alignParentStart="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitor"
        android:width="200dp"
        android:height="100dp"
        android:textColor="#ffffff"
        android:id="@+id/button_monitor_2"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/button_smartwatch_2"
        android:layout_alignLeft="@+id/button_smartwatch_2"
        android:layout_alignStart="@+id/button_smartwatch_2"
        android:onClick="goToMonitorVersuch2"
        android:background="@drawable/buttonstandard" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smartwatch"
        android:id="@+id/button_smartwatch_2"
        android:height="100dp"
        android:width="200dp"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="goToWatchVersuch"
        android:background="@drawable/buttonstandard"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datenbrille"
        android:id="@+id/button_datenbrille_2"
        android:layout_marginTop="50dp"
        android:width="200dp"
        android:textColor="#ffffff"
        android:height="100dp"
        android:layout_below="@+id/button_smartwatch_2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonstandard"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versuch 1"
        android:id="@+id/button"
        android:background="@drawable/arrowleft"
        android:layout_marginRight="330dp"
        android:onClick="goToVersuch1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_toStartOf="@+id/button_monitor_2"
        android:layout_below="@+id/button_datenbrille_2" />

</RelativeLayout>
